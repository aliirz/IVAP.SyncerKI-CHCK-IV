            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Controls:ProgressRing x:Name="Loader" IsActive="True" Grid.Row="2" />
        <Label Content="please wait titanic is syncing..." Margin="62,166,54,64"/>
